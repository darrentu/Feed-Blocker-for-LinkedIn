{
    "manifest_version": 3,
    "name": "Feed Blocker for LinkedIn",
    "version": "2.0",
    "description": "Block the feed on LinkedIn",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "https://www.linkedin.com/*"
        ],
        "js": ["content.js"],
        "css": ["content.css"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": [
      "storage", "tabs"
    ]
  }